@model Sistemas_de_Turnos_Medico.Models.Cita

@{
    ViewData["Title"] = "Borrar";
}

<div style="max-width: 412px; margin: auto;">
    <h1>Borrar</h1>

    <div class="border border-danger border-3 rounded text-center" style="padding: 5px; margin: 10px">
        <i class="bi bi-exclamation-triangle-fill" style="color:red; font-size: 50px;"></i>
        <h3 class="fw-bold">
            ¿Estás seguro que quieres eliminar esta Cita?
        </h3>
        <hr />
        <dl class="row row-cols-2">
            <dt class="col">
                @Html.DisplayNameFor(model => model.Fecha)
            </dt>
            <dd class="col">
                @Html.DisplayFor(model => model.Fecha)
            </dd>
            <dt class="col">
                @Html.DisplayNameFor(model => model.Hora)
            </dt>
            <dd class="col">
                @Html.DisplayFor(model => model.Hora)
            </dd>
            <dt class="col">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col">
                @Html.DisplayFor(model => model.Estado.Descripcion)
            </dd>
            <dt class="col">
                @Html.DisplayNameFor(model => model.Doctor)
            </dt>
            <dd class="col">
                @Html.DisplayFor(model => model.Doctor.Nombre)
                @Html.DisplayFor(model => model.Doctor.Apellido)
            </dd>
            <dt class="col">
                @Html.DisplayNameFor(model => model.Paciente)
            </dt>
            <dd class="col">
                @Html.DisplayFor(model => model.Paciente.Nombre)
                @Html.DisplayFor(model => model.Paciente.Apellido)
            </dd>
        </dl>
        <h7 class="text-danger">¡No podrás recuperarla de vuelta una vez eliminada!</h7>
    </div>
    <form asp-action="Delete" class="d-flex justify-content-evenly">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar</button>
        <a asp-action="Index" class="btn btn-dark"><i class="bi bi-caret-left"></i> Regresar</a>
    </form>
</div>