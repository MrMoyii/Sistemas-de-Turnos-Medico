@model Sistemas_de_Turnos_Medico.Models.Doctor

@{
    ViewData["Title"] = "Detalles";
}
<div style="max-width: 400px; margin: auto;">
    <h1>Detalles</h1>

    <div class="border border-info border-3 rounded text-center" style="padding: 5px; margin: 10px">
        <h4 class="text-info">Doctor</h4>
        <hr />
        <dl class="row row-cols-2">
            <dt class = "col">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class = "col">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class = "col">
                @Html.DisplayNameFor(model => model.Apellido)
            </dt>
            <dd class = "col">
                @Html.DisplayFor(model => model.Apellido)
            </dd>
            <dt class = "col">
                @Html.DisplayNameFor(model => model.Celular)
            </dt>
            <dd class = "col">
                @Html.DisplayFor(model => model.Celular)
            </dd>
            <dt class = "col">
                @Html.DisplayNameFor(model => model.Foto)
            </dt>
            <dd class = "col">
                @if (!string.IsNullOrEmpty(Model.Foto))
                {
                    <img src="~/fotos/@Model.Foto" class="rounded-circle" style="max-width:50px" />
                }
            </dd>
            <dt class = "col">
                @Html.DisplayNameFor(model => model.Especializacion)
            </dt>
            <dd class = "col">
                @Html.DisplayFor(model => model.Especializacion.Nombre)
            </dd>
        </dl>
    </div>
    <div class="d-flex justify-content-evenly">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Editar</a>
        <a asp-action="Index" class="btn btn-dark"><i class="bi bi-caret-left"></i> Regresar</a>
    </div>
</div>