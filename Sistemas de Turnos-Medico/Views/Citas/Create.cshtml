@model Sistemas_de_Turnos_Medico.Models.Cita

@{
    ViewData["Title"] = "Create";
}

<div style="max-width: 400px; margin: auto;">
    <form asp-action="Create">
        <h1>Crear</h1>
        <div class="border border-secondary border-3 rounded text-center" style="padding: 10px; margin: 10px">
            <h4>Cita</h4>
            <hr />
            <div class="row" style="margin-bottom: 1rem;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col">
                    <label asp-for="Fecha" class="control-label"></label>
                    <input asp-for="Fecha" class="form-control" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="Hora" class="control-label"></label>
                    <input asp-for="Hora" class="form-control" />
                    <span asp-validation-for="Hora" class="text-danger"></span>
                </div>
                
                <div class="input-group">
                    <span class="input-group-text" id="basic-addon1">Estado</span>
                    <select asp-for="EstadoId" class="form-select" asp-items="ViewBag.Estado"></select>
                </div>

                <div class="input-group">
                    <span class="input-group-text" id="basic-addon1">Doctor</span>
                    <select asp-for="DoctorId" class="form-select" asp-items="ViewBag.Doctor"></select>
                    <a asp-area="" class="btn btn-outline-success" asp-controller="Doctores" asp-action="Create" title="Crear Nuevo">
                        <i class="bi bi-person-plus-fill"></i>
                    </a>
                </div>
                <div class="input-group">
                    <span class="input-group-text" id="basic-addon1">Paciente</span>
                    <select asp-for="PacienteId" class="form-select" asp-items="ViewBag.Paciente"></select>
                    <a asp-area="" class="btn btn-outline-success" asp-controller="Pacientes" asp-action="Create" title="Crear Nuevo">
                        <i class="bi bi-person-plus-fill"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-evenly">
            <button type="submit" class="btn btn-success"><i class="bi bi-plus-lg"></i> Crear Nuevo</button>
            <a asp-action="Index" class="btn btn-dark"><i class="bi bi-caret-left"></i> Regresar</a>
        </div>
    </form>
</div>

<style>
    /*.control-label {
        float: left;
        margin-left: 3.3rem;
    }*/

    .input-group {
        margin-top: 0.75rem;
    }

    .form-control {
        text-align: center;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
