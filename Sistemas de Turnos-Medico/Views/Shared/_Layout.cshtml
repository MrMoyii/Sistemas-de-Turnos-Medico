<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Turnos Medicos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sistemas_de_Turnos_Medico.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Citas" asp-action="Index">Sistema de Turnos Medico</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="DropdownMenuCitas" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Citas
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="DropdownMenuCitas">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Citas" asp-action="Index">
                                        <i class="bi bi-card-list"></i> Citas
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Citas" asp-action="Create">
                                        <i class="bi bi-plus"></i> Nueva Cita
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="DropdownMenuDoctores" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Doctores
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="DropdownMenuDoctores">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Doctores" asp-action="Index">
                                        <i class="bi bi-person-lines-fill"></i> Doctores
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Doctores" asp-action="Create">
                                        <i class="bi bi-person-plus-fill"></i> Nuevo Doctor
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Especializaciones" asp-action="Index">
                                        <i class="bi bi-card-list"></i> Especializaciónes
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Especializaciones" asp-action="Create">
                                        <i class="bi bi-plus"></i> Nueva Especialización
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="DropdownMenuPacientes" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Pacientes
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="DropdownMenuPacientes">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Pacientes" asp-action="Index">
                                        <i class="bi bi-person-lines-fill"></i> Lista de Pacientes
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Pacientes" asp-action="Create">
                                        <i class="bi bi-person-plus-fill"></i> Nuevo Paciente
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2023 - Sistema de Turnos Medico
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/preview.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
