@model IEnumerable<Sistemas_de_Turnos_Medico.Models.Especializacion>

@{
    ViewData["Title"] = "Especializaciónes";
}

<h1>Especializaciónes</h1>

<p>
    <a asp-action="Create" class="btn btn-success" title="Crear nueva cita"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
</p>
<table class="table text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th style="min-width: 15vw;"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style="vertical-align: middle;">
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Editar">
                        <i class="bi bi-pencil-square"></i>
                    </a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Detalles">
                        <i class="bi bi-card-text"></i>
                    </a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm eliminar" title="Borrar">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>

<style>
    .eliminar {
        color: black;
        background-color: #e65757;
        margin-right: 7px;
    }

    .eliminar:hover {
        background-color: #e66666;
    }
</style>