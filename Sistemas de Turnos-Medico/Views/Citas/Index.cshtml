@model IEnumerable<Sistemas_de_Turnos_Medico.Models.Cita>

@{
    ViewData["Title"] = "Citas";
}

<h1>Citas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nueva Cita</a>
</p>
<table class="table text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr style="vertical-align: middle;">
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.Nombre) 
                @Html.DisplayFor(modelItem => item.Doctor.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.Nombre) 
                @Html.DisplayFor(modelItem => item.Paciente.Apellido)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil-square"></i>
                    </a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                        <i class="bi bi-card-text"></i>
                    </a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm eliminar">
                        <i class="bi bi-trash-fill"></i>
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>

<style>
    .eliminar {
        color: black;
        background-color: #e65757;
    }
    .eliminar:hover {
            background-color: #e66666;
    }
</style>