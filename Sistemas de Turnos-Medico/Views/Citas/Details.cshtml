@model Sistemas_de_Turnos_Medico.Models.Cita

@{
    ViewData["Title"] = "Details";
}
<div style="max-width: 400px; margin: auto;">
    <h1>Details</h1>

    <div class="border border-secondary border-3 rounded text-center" style="padding: 5px; margin: 10px">
        <h4>Cita</h4>
        <hr />
        <dl class="row row-cols-2">
            <dt class="col">
                @Html.DisplayNameFor(model => model.Fecha)
            </dt>
            <dd class="col">
                @Html.DisplayFor(model => model.Fecha)
            </dd>
            <dt class="col">
                @Html.DisplayNameFor(model => model.Hora)
            </dt>
            <dd class="col">
                @Html.DisplayFor(model => model.Hora)
            </dd>
            <dt class="col">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col">
                @Html.DisplayFor(model => model.Estado.Descripcion)
            </dd>
            <dt class="col">
                @Html.DisplayNameFor(model => model.Doctor)
            </dt>
            <dd class="col">
                @Html.DisplayFor(model => model.Doctor.Nombre) 
                @Html.DisplayFor(model => model.Doctor.Apellido)
            </dd>
            <dt class="col">
                @Html.DisplayNameFor(model => model.Paciente)
            </dt>
            <dd class="col">
                @Html.DisplayFor(model => model.Paciente.Nombre) 
                @Html.DisplayFor(model => model.Paciente.Apellido)
            </dd>
        </dl>
    </div>
    <div class="d-flex justify-content-evenly">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-dark">Regresar</a>
    </div>
</div>